<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dimiDev</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TipamCinemaTicker.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-body border-bottom box-shadow mb-3 justify-content-center align-items-center" style="height:100px; color:white;">
            <div class="container-fluid justify-content-around">
                <a class="navbar-brand text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">BKDCinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item mx-5">
                            <a class="nav-link btn btn-outline-info text-light" style="border:none;" asp-controller="Film" asp-action="Index"> <i class="bi bi-film"></i> Films </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info text-light" style="border:none;" asp-controller="Acteurs" asp-action="Index"> <i class="bi bi-person"></i> Acteurs </a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-body mt-5" style="height:100px; color:white; margin-top:25px;">

        <div class="container text-light justify-content-center align-items-end copyRight">
            &copy; 2024 - <strong>Dimidev</strong> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
