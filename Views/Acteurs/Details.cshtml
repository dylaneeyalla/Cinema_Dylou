@model GestionCinema.Models.Acteurs

@{
    ViewBag.Title = "Details Acteurs";
}

<h2 class="text-center fw-bold">Details sur l'acteur : @Model.Nom</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="col-md-8 justify-content-center align-content-center">
        <form asp-action="Details sur Acteurs" class="col-md-8  justify-content-center align-content-center ">
            <fieldset>
                @* <legend>Acteurs</legend> *@
                <div asp-validation-summary="ModelOnly" class="text-center">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" id="PhotoProfilePreview" src="@Model.photoProfil" style="max-width:150px;" />
                    </div>
                </div>
                <div class="form-group editor-label ">
                    @Html.LabelFor(model => model.Nom)
                    @* <label>Nom</label> *@
                </div>
                <div class=" form-group editor-field">
                    <input type="text" placeholder="Nom" name="Nom" class="form-control" value="@Model.Nom"  />
                    @* @Html.EditorFor(model => model.Nom) *@
                    <p style="color:red;">
                        @Html.ValidationMessageFor(model => model.Nom)
                    </p>

                </div>

                <div class="form-group editor-label">
                    @Html.LabelFor(model => model.Biographie)
                </div>
                <div class=" form-group editor-field">
                    <input type="text" placeholder="Biographie" name="Biographie" class="form-control" value="@Model.Biographie"  />

                    @* @Html.EditorFor(model => model.Biographie) *@
                    <p style="color:red;">
                        @Html.ValidationMessageFor(model => model.Biographie)
                    </p>
                </div>
                <div class="form-group editor-label">
                    @Html.LabelFor(model => model.profil)
                </div>
                <div class=" form-group editor-field">
                    <input type="text" placeholder="Profil" name="profil" class="form-control" value="@Model.profil"  />

                    @* @Html.EditorFor(model => model.Biographie) *@
                    <p style="color:red;">
                        @Html.ValidationMessageFor(model => model.profil)
                    </p>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.photoProfil)
                </div>
                <div class=" form-group editor-field">
                    <input type="text" placeholder="photoProfil" name="photoProfil" class="form-control" value="@Model.photoProfil"  />

                    @* @Html.EditorFor(model => model.photoProfil) *@
                    <p style="color:red;">
                        @Html.ValidationMessageFor(model => model.photoProfil)
                    </p>
                </div>

                <div class="col-md-8 mt-4">
                    <input type="submit" value="Update" class="btn btn-primary" asp-controller="Acteurs" />
                    <a asp-action="Index" asp-controller="Acteurs" class="btn btn-success ">Back to List</a>
                    @* <a class="btn btn-primary" asp-action="Edit" asp-controller="Acteurs" asp-route-itemid="@Model.Id">Update</a> *@
                </div>   
            </fieldset>
        </form>
    </div>
}



