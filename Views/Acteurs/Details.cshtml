<!--Ajouter la previsualisation d'une photo de profile avec JQUERY-->
@section Scripts
{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('photoProfilepreview');
            output.src = $("#photoProfile").val();
        })
        $("#photoProfile").on("change", function () {
            var output = document.getElementById('photoProfilpreview');
            output.src = $(this).val();
        })
    </script>
    <!--FIN-->
}

