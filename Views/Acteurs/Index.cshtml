@model IEnumerable<GestionCinema.Models.Acteurs>

@{
    ViewBag.Title = "Listes des Acteurs";
}

<h2>Listes de tout les Acteurs</h2>


<table>
    <tr class="mb-4 mt-5 w-auto justify-content-center align-items-center fs-6">
        
        <th class="col-md-1 fs-6">
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.photoProfil)
        </th >
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.profil)
        </th >
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Biographie)
        </th>
        <th class="mx-2  col-md-6 text-center"> Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="mb-4 mt-5 w-auto justify-content-center align-items-center">
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.Nom)
            </td>

            <th class="align-middle justify-content-around col-md-2">
                <img class="rounded-circle" src="@item.photoProfil" alt="@item.Nom" style="width:80px; height:80px;" />
            </th>
            <td class="col-md-1">
                @Html.DisplayFor(modelItem => item.profil)
            </td>
            <td class="col-md-2">
                @Html.DisplayFor(modelItem => item.Biographie)
            </td>
            <td class="col-md-2">
                @* <a class="btn btn-outline-primary" asp-action="Edit" asp-asp-route-id="@item.Id"> </a> *@
                <a asp-action="Edit" asp-controller="Acteurs" asp-route-id="@item.Id" class="btn btn-success" style="width:150px;"> <i class="bi bi-pencil"></i> Modifier</a>
                @* <i class="bi bi-pencil"></i> @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) *@
            </td>
            <td class="col-md-2">
                <a asp-action="Details" asp-controller="Acteurs" asp-route-id="@item.Id" class="btn btn-primary" style="width:150px;"> <i class="bi bi-plus"></i> Details</a>
                @* <i class="bi bi-pencil"></i> @Html.ActionLink("Details", "Details", new { id = item.Id }) *@
            </td>
            @* <td><a asp-controller="Acteurs" asp-action="Details" asp-route-id="@item.Id" class=" btn btn-primary"> <i class="bi bi-pencil"></i>Details</a></td> *@
            <td class="col-md-2"><a asp-controller="Acteurs" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:150px;"><i class="bi bi-trash-fill"></i> Supprimer</a></td>
            @* <td class="btn btn-outline-info"> <i class="bi bi-pencil"></i>  @Html.ActionLink("Details", "Details", new { id = item.Id })</td> *@
            @* <td class="btn btn-danger "><i class="bi bi-trash-fill"></i>    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id }) </td> *@
        </tr>
        <div style="position:fixed;right:25px;bottom:120px;">
            <a asp-action="Create" asp-controller="Acteurs" class="btn btn-success"><i class="bi bi-plus"></i>Ajouter un Acteur</a>
        </div>
        
    }

</table>

